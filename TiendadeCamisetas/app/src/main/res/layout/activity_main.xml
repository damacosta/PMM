<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alejandro.tiendadecamisetas.MainActivity">

    <TextView android:id="@android:id/empty" android:layout_width="wrap_content" android:text="@string/lstNoElements"  android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fragmentShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></ListView>
    </FrameLayout>

</LinearLayout>
